{
  "name": "@contrast/eslint-config",
  "version": "3.0.0-beta.4",
  "description": "Base ESLint configuration for Contrast NodeJS projects",
  "repository": "Contrast-Security-OSS/eslint-config",
  "license": "ISC",
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "test": "eslint lib/"
  },
  "engines": {
    "node": ">=12.13.0"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.1",
    "@types/node": "^12.20.46",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-node": "^11.1.0"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-node": "^11.1.0"
  },
  "eslintConfig": {
    "extends": [
      "./lib/index.js"
    ],
    "overrides": [
      {
        "files": [
          "lib/rules/base.js"
        ],
        "rules": {
          "quote-props": [
            "error",
            "consistent"
          ],
          "sort-keys": [
            "error",
            "asc",
            {
              "caseSensitive": false
            }
          ]
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
